DirectoryIndex index.html index.php
Options -Indexes
RewriteEngine On
RewriteCond $1 !^(index\.php|robots\.txt)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ ./index.php?/$1 [L,QSA]

#Set into Production
<IfModule mod_env.c>
    SetEnv CI_ENV production
</IfModule>
